            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Category Test",
                  "description": "Lorem ipsum dolor sit amet"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created successfully"
